<h2>Create a new movie</h2>

<form action="/movie/create" method="POST">
  <label> Title:
    <input type="text" name="title" />
  </label>
  <br>

  <label> Genre:
    <textarea type="text" name="genre"> </textarea>
  </label>
  <br>

  <label> Plot:
    <textarea type="text" name="plot"> </textarea>
  </label>
  <br>

  <label for="cast-select"> Cast:
    <select name="cast">
      <option disable selected value=""></option>
      {{#each dbCelebrities}}
        <option value="{{this._id}}"> {{this.name}} </option>
      {{/each}}
    </select>
  </label>
  <br>

  <button type="submit"> Create the movie </button>
</form>